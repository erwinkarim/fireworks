.row
	.col-xs-12
		.page-header
			%h2
				Sign In
				- if ENV['devise_check_group'] then
					%small
						Only some shall pass

.row
	.col-xs-10.col-xs-offset-1.col-md-4
		= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal', :role =>'form', :method => :post } ) do |f| 
			.form-group
				= #f.label :domain
				= #select_tag "ads_user[domain]", options_for_select(eval(ENV['devise_ldap_domains'])), :class =>'form-control' 
			.form-group
				= f.label :username
				= f.text_field :username, autofocus: true , :placeholder => "Your Username", :class =>'form-control' 
			.form-group
				= f.label :password
				= f.password_field :password, autocomplete: "off", :placeholder => "password" , :class => 'form-control'
			.form-group
				.checkbox
					- if devise_mapping.rememberable? 
						%label.checkbox{ :for => 'ads_user_remember_me' }
							= f.check_box :remember_me 
							Remember Me
			.form-group
				%button.btn.btn-primary{ :type => 'submit' } Sign In
