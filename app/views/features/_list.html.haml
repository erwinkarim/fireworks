- features.each do |feature|
	.accordion-group{ :data => { :'init-feature' => 'false', :licserver => licserver.id, :feature => feature[:name] } }
		.accordion-heading
			%a.accordion-toggle{ :data => { :toggle => 'collapse', :parent => '#licserver-' + licserver.id.to_s + '-features-listing' }, :href => '#licserver-' + licserver.id.to_s + '-features-' + feature[:name] }
				= feature[:name]
		.accordion-body.collapse{ :id => 'licserver-' + licserver.id.to_s + '-features-' + feature[:name] }
			.accordion-inner
				.features-watch
				.features-info
					- if ads_user_signed_in? then
						= watch_icon({ :user => current_ads_user, :model_type => 'FeatureHeader', :model_id => feature[:id], :class => 'btn', :text => true })
					= link_to fa_icon('info', :text => 'More Info'), licserver_feature_path(licserver.id, feature[:name]), :class => 'btn' 
				.features-graph
