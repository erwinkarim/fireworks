.form
	= hidden_field_tag 'server_id', licserver.nil? ? 0 : licserver.id 
	.control-group.server_info-control
		%label.control-label
			Server port and IP
		= text_field_tag 'server_info', 
			licserver.nil? ? '' : licserver.port.to_s + '@' + licserver.server, :placeholder => 'Format: port@server or @server',
			:class => 'input-block-level'
	.control-group.tags-control
		%label
			Tags
		= text_field_tag 'tags', 
			licserver.nil? ? '' : licserver.tags.map{|x| x.title }.join(' '), 
			:placeholder => 'Seperate tags by spaces; ie "Openworks Geoprobe"', :class => 'input-block-level' 
	.control-group.monitor_idle-control
		%label
			Monitor Idle Users
		%label
			= (check_box_tag 'monitor_idle', 'monitor_idle', licserver.nil? ? false : licserver.monitor_idle?, :class => 'checkbox' )  + ' Monitor this server for user activity'
	
.status
