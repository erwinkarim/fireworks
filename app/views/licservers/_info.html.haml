%h3 General Info
.links
	= link_to fa_icon('link', :text => 'Permalink' ), licserver_path(licserver), { :class => 'btn' }
%dl.dl-horizontal
	%dt Created
	%dd 
		= licserver.created_at.localtime
	%dt Last Update
	%dd
		= licserver.updated_at.localtime
	%dt Monitor Idle Users
	%dd
		= licserver.monitor_idle
%h3 Features
%p
	= link_to fa_icon('info',{:text => 'More Info'}), licserver_features_path(licserver.id), :class => 'btn'
	= link_to fa_icon('bar-chart-o', { :text => 'Analysis' }), licserver_analysis_path(licserver.id), :class => 'btn'
.well.well-large
	- if features.nil? || features.empty? then
		%p No Features Found
	- else
		%p
			- features.each do |feat|
				= link_to feat[:name], licserver_feature_path(licserver.id, feat[:name]), :class => 'btn btn-large' 
%h3 Tags
.well
	- if licserver.tags.size == 0 then
		%span.label.label-warning No Tags
	- else
		- licserver.tags.each do |tag|
			= link_to tag.title, tag_path(tag.title), :class => 'btn btn-mini tags', :data => { :id => tag.id, :'tag-title' => tag.title, }
- if ads_user_signed_in? then
	%h3 Action
	%button.btn.btn-primary#edit-licserver{ :data => { :id => licserver.id, :toggle => 'modal', 
		:target => '#licserver-modal-' + licserver.id.to_s, :remote => edit_licserver_path(licserver.id) } } 
		= fa_icon('edit')
		Edit
	= link_to fa_icon('ban', :text => 'Delete'), licserver, :class => 'btn btn-danger', :method => :delete, 
		:data => { :remote => true, :confirm => 'Really delete?' }
	.modal.hide.fade{ :role => 'dialog', :id => 'licserver-modal-' + licserver.id.to_s }
		.modal-header
			%button.close{ :type => 'button', :data => { :dismiss => 'modal' } }
				x
			%h3
				Update Licserver
		.modal-body
		.modal-footer
			%button.btn{ :data => { :dismiss => 'modal' } }
				Close
			%button.btn.btn-primary.update-licserver{ :data => { :id => licserver.id } }
				Update
