- @tags.each do |tag|
	.accordion-group.accordion-tag{ :data => {:title => tag.title } }
		.accordion-heading
			%a.accordion-toggle{ :data => {:toggle => 'collapse', :parent => '#tags-accordion' } , :href => '#tags-' + tag.title }
				= tag.title
		.accordion-body.collapse{ :id => 'tags-' + tag.title }
			.accordion-inner{ :data => { :init => 'false' } }
				.watch-list
					- if ads_user_signed_in? then
						= watch_icon({:user => current_ads_user,  :model_type => 'Tag', :model_id => 22, :class => 'btn' , :text => true}) 
					= link_to fa_icon('link',{ :text => 'Permalink' }), tag_path(tag.title), :class => 'btn'

