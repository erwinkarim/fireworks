.page-header
	%h1
		- if ads_user_signed_in? then
			= watch_icon({:user => current_ads_user,  :model_type => 'Tag', :model_id => @tag_handle.id }) 
		#{@tag}
	%ul.breadcrumb
		%li
			%a{ :href => tags_path } Tags
		%li.active
			= @tag
= render :template => 'tags/show.template', :locals => { :@tag => @tag }
