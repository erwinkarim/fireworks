.page-header
	%h1
		- if ads_user_signed_in? then
			= watch_icon({ :user=>current_ads_user, :model_type => 'User', :model_id => @user.id })
		= @user.name
	%ul.breadcrumb
		%li
			%a{ :href => users_path } Users
			%span.divider /
		%li.active
			= @user.name
.row
	#user-info.span12
		= render :template => 'users/show.template', :locals => { :@user => @user, :last_seen_at => @user.last_seen_at }
