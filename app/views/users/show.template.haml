.row-fluid
	.span12
		.user-info
			%dl
				%dt Login Name:
				%dd #{@user.name}
				%dt First Seen:
				%dd #{@user.created_at.localtime}
				%dt Last Seen:
				%dd
					= @user.last_seen_at.nil? ? 'Unknown' : @user.last_seen_at.localtime
.row-fluid
	.span12
		.user-machines{ :data => { :init => "false" } }
			%ul.nav.nav-tabs{ :id => 'user' + @user.id.to_s + '-tabs' }
				- @user.machines.each do |machine|
					%li
						%a{ :href => '#user' + @user.id.to_s + '-' + 'machine' + machine.id.to_s, 
							:data => { :toggle => 'tab', :'user-id' => @user.id, :'user-name' => @user.name, :'machine-id' => machine.id, 
								:init => "false", :'machine-name' => machine.name } }
							= machine.name
			.tab-content
				- @user.machines.each do |machine|
					.tab-pane{ :id => 'user' + @user.id.to_s + '-' + 'machine' + machine.id.to_s, 
						:data => { :'machine-id' => machine.id, :'user-id' => @user.id , :'user-name' => @user.name, :'machine-name' => machine.name} }
